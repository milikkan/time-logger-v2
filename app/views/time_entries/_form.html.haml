= form_for @time_entry do |f|
  - if @time_entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@time_entry.errors.count, "error")} prohibited this time_entry from being saved:"
      %ul
        - @time_entry.errors.full_messages.each do |message|
          %li= message

  .grid-container
    .grid-y
      .cell
        .grid-x.grid-margin-x
          .field.cell.large-6.medium-12
            = f.label :start
            = f.datetime_select :start
          .field.cell.large-6.medium-12
            = f.label :stop
            = f.datetime_select :stop
      .field.cell
        = f.label :comment
        = f.text_field :comment, size: 40
      .actions.cell
        = f.submit 'Save'
